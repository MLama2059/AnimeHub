@page "/admin/animes/create"
@page "/admin/animes/update/{Id:int}"
@using AnimeHub.Shared.Models.Dtos.Anime
@using AnimeHub.Shared.Models.Dtos.Category
@using AnimeHub.Shared.Models.Dtos.Genre
@using AnimeHub.Shared.Models.Dtos.Studio
@using AnimeHub.Shared.Models.Enums
@using System.ComponentModel.DataAnnotations
@using AnimeHubClient.Services
@using AnimeHubClient.Extensions
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@inject IAnimeService AnimeService
@inject ILookUpService LookUpService
@inject IConfiguration Configuration


@if (IsLoading)
{
    <div class="py-4 text-center"><MudProgressCircular Indeterminate="true" /></div>
}
else
{
    <MudCard Elevation="4" Class="mt-4">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Align="Align.Center" Typo="Typo.h4" Class="fw-bold">@(Id > 0 ? "Update" : "Create") Anime</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <EditForm Model="Anime" FormName="AnimeUpsertForm" OnValidSubmit="UpsertAnime">
                <DataAnnotationsValidator />

                <MudTextField Variant="Variant.Outlined" Label="Anime Title" @bind-Value="Anime.Title" For="@(() => Anime.Title)" Class="my-3" />
                <MudTextField Variant="Variant.Outlined" Label="Description" Lines="3" @bind-Value="Anime.Description" For="@(() => Anime.Description)" Class="my-3" />

                <MudGrid>
                    <MudItem xs="12" sm="6">
                        <MudNumericField T="double?" Variant="Variant.Outlined" Label="Rating" @bind-Value="Anime.Rating" Min="0.0" Max="10.0" For="@(() => Anime.Rating)" Class="my-3" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudNumericField T="int?" Variant="Variant.Outlined" Label="Episodes" @bind-Value="Anime.Episodes" For="@(() => Anime.Episodes)" Class="my-3" />
                    </MudItem>
                </MudGrid>

                <MudGrid>
                    <MudItem xs="12" sm="6">
                        <MudSelect T="int?" Label="Season" Variant="Variant.Outlined" @bind-Value="Anime.Season" For="@(() => Anime.Season)" Class="my-3">
                            @foreach (var seasonValue in Enum.GetValues(typeof(Season)))
                            {
                                <MudSelectItem T="int?" Value="@((int)seasonValue)">@seasonValue.ToString()</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudNumericField T="int?" Variant="Variant.Outlined" Label="Premiered Year" Min="1900" Max="2100" @bind-Value="Anime.PremieredYear" For="@(() => Anime.PremieredYear)" Class="my-3" />
                    </MudItem>
                </MudGrid>

                <MudSelect T="Status?" Label="Status" Variant="Variant.Outlined" @bind-Value="@AnimeStatusEnum" Class="my-3">
                    @foreach (Status statusValue in Enum.GetValues(typeof(Status)))
                    {
                        <MudSelectItem T="Status?" Value="@statusValue">@statusValue.GetDisplayName()</MudSelectItem>
                    }
                </MudSelect>

                <MudSelect T="int?" Label="Category" Variant="Variant.Outlined" @bind-Value="Anime.CategoryId" For="@(() => Anime.CategoryId)" Class="my-3">
                    @foreach (var category in Categories)
                    {
                        <MudSelectItem T="int?" Value="@category.Id">@category.Name</MudSelectItem>
                    }
                </MudSelect>

                <MudSelect T="int"
                           Label="Studios"
                           Variant="Variant.Outlined"
                           SelectedValues="Anime.StudioIds"
                           SelectedValuesChanged="@(vals => Anime.StudioIds = new HashSet<int>(vals))"
                           MultiSelection="true"
                           Clearable="true"
                           ToStringFunc="@(new Func<int, string>(ConvertStudioIdToName))"
                           Class="my-3">

                    @if (Studios != null)
                    {
                        @foreach (var studio in Studios)
                        {
                            <MudSelectItem T="int" Value="@studio.Id">@studio.Name</MudSelectItem>
                        }
                    }
                </MudSelect>

                <MudPaper Elevation="2" Class="p-3 mt-3">
                    <MudText Typo="Typo.subtitle1" Class="mb-2">Genres</MudText>
                    <MudGrid>
                        @if (Genres != null)
                        {
                            @foreach (var genre in Genres)
                            {
                                <MudItem xs="6" sm="4" md="3" lg="2">
                                    <MudCheckBox T="bool"
                                                 @key="genre.Id"
                                                 Label="@genre.Name"
                                                 Dense="true"
                                                 Size="Size.Small"
                                                 Color="Color.Primary"
                                                 Value="@Anime.GenreIds.Contains(genre.Id)"
                                                 ValueChanged="e => ToggleGenre(genre.Id, e)" />
                                </MudItem>
                            }
                        }
                    </MudGrid>
                </MudPaper>

                <MudFileUpload T="IBrowserFile" OnFilesChanged="OnImageFileSelected" Class="mt-3">
                    <ActivatorContent>
                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Filled.Image">
                            Upload Image
                        </MudButton>
                    </ActivatorContent>
                </MudFileUpload>

                @if (!string.IsNullOrEmpty(PreviewImageUrl))
                {
                    @* Local Preview (Base64) *@
                    @* <MudText Typo="Typo.caption" Class="d-block mt-1">New Image Selected:</MudText> *@
                    <MudImage Src="@PreviewImageUrl" Alt="New Preview" Elevation="25" Class="rounded-lg ma-4 d-block mx-auto" Style="max-height:200px; max-width: 100%;" />
                }
                else if (!string.IsNullOrEmpty(UploadedImageUrl))
                {
                    @* Existing Server Image *@
                    <MudImage Src="@($"{ApiBaseUrl}{UploadedImageUrl}")" Alt="Current Image" Elevation="25" Class="rounded-lg ma-4 d-block mx-auto" Style="max-height:200px; max-width: 100%;" />
                }

                @* TRAILER & MEDIA *@
                <MudText Typo="Typo.h6" Class="mt-5">Trailer & Media</MudText>
                <MudDivider Class="my-2"/>
                
                <MudGrid>
                    @* Trailer Poster *@
                    <MudItem xs="12" md="6">
                        <MudFileUpload T="IBrowserFile" Accept=".jpg,.jpeg,.png" OnFilesChanged="OnPosterFileSelected">
                            <ActivatorContent>
                                <MudButton HtmlTag="label"
                                           Variant="Variant.Filled"
                                           Color="Color.Primary"
                                           StartIcon="@Icons.Material.Filled.Image">
                                    Upload Trailer Thumbnail
                                </MudButton>
                            </ActivatorContent>
                        </MudFileUpload>
                        
                        @if (!string.IsNullOrEmpty(PreviewPosterUrl))
                        {
                            @* Local Preview (Base64) *@
                            @* <MudText Typo="Typo.caption" Class="d-block mt-1">New Poster Selected:</MudText> *@
                            <MudImage Src="@PreviewPosterUrl" Height="100" Class="rounded mt-2" Style="object-fit:cover; aspect-ratio: 16/9;" />
                        }
                        else if (!string.IsNullOrEmpty(Anime.TrailerPosterUrl))
                        {
                            @* Existing Server Poster *@
                            @* <MudText Typo="Typo.caption" Class="d-block mt-1">Current Poster:</MudText> *@
                            <MudImage Src="@($"{ApiBaseUrl}{Anime.TrailerPosterUrl}")" Height="100" Class="rounded mt-2" Style="object-fit:cover; aspect-ratio: 16/9;" />
                        }
                    </MudItem>

                    @* Trailer Video (MP4) *@
                    <MudItem xs="12" md="6">
                        <MudFileUpload T="IBrowserFile" Accept=".mp4" OnFilesChanged="OnTrailerFileSelected">
                            <ActivatorContent>
                                <MudButton HtmlTag="label"
                                           Variant="Variant.Filled"
                                           Color="Color.Error"
                                           StartIcon="@Icons.Material.Filled.Movie">
                                    Upload Trailer Video
                                </MudButton>
                            </ActivatorContent>
                        </MudFileUpload>

                        @if (SelectedTrailerFile != null)
                        {
                            <MudAlert Severity="Severity.Info" Class="mt-2" Dense="true">
                                <MudText Typo="Typo.caption"><strong>Selected:</strong> @SelectedTrailerFile.Name</MudText>
                                <br />
                                <MudText Typo="Typo.caption"><strong>Size:</strong> @(SelectedTrailerFile.Size / 1024 / 1024) MB</MudText>
                                <br />
                                @* <MudText Typo="Typo.caption"><em>Will be uploaded upon saving.</em></MudText> *@
                            </MudAlert>
                        }
                        @* Scenario B: Existing File (Show Link/Player) *@
                        else if (!string.IsNullOrEmpty(Anime.TrailerUrl))
                        {
                            @* <MudText Typo="Typo.caption" Class="d-block mt-1">Current Video:</MudText> *@
                            @* Display Relative Path for clean UI *@
                            <MudText Typo="Typo.body2" Color="Color.Success" Class="text-truncate mt-2">@Anime.TrailerUrl</MudText>
                        }
                    </MudItem>
                </MudGrid>

                <MudCardActions Class="py-4">
                    <MudGrid Justify="Justify.Center" Class="px-2">
                        <MudItem xs="12" sm="6">
                            <MudButton ButtonType="ButtonType.Submit"
                                       StartIcon="@Icons.Material.Filled.LibraryAddCheck"
                                       Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       FullWidth="true"
                                       Disabled="@IsLoading">
                                @(Id > 0 ? "Update" : "Create")
                            </MudButton>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudButton Href="/admin/animes"
                                       StartIcon="@Icons.Material.Filled.ArrowCircleLeft"
                                       Variant="Variant.Filled"
                                       Color="Color.Default"
                                       FullWidth="true"
                                       Disabled="@IsLoading">
                                Back to List
                            </MudButton>
                        </MudItem>
                    </MudGrid>
                </MudCardActions>
            </EditForm>
        </MudCardContent>
    </MudCard>
}

@code {
    [Parameter]
    public int Id { get; set; }

    // Single form model, can be either Create or Update DTO
    private AnimeUpdateDto Anime { get; set; } = new();

    private List<CategoryReadDto>? Categories { get; set; } = new();
    private List<GenreReadDto>? Genres { get; set; } = new();
    private List<StudioReadDto>? Studios { get; set; } = new();

    private bool IsLoading { get; set; } = true;

    // Image files for upload
    private IBrowserFile? SelectedImageFile;
    private string? PreviewImageUrl;    // Base64 local preview
    private string? UploadedImageUrl;   // Server path from API

    // Trailer Poster files for upload
    private IBrowserFile? SelectedPosterFile;
    private string? PreviewPosterUrl;

    // Trailer Video files for upload
    private IBrowserFile? SelectedTrailerFile;
    // private string? PreviewTrailerUrl;

    // Helper property to get Base URL cleanly in HTML
    private string ApiBaseUrl => Configuration["ApiBaseUrl"] ?? "";

    protected override async Task OnParametersSetAsync()
    {
        await LoadAnime();
        IsLoading = false;
        StateHasChanged();
    }

    private async Task LoadAnime()
    {
        if (Id > 0)
        {
            var result = await AnimeService.GetAnimeByIdAsync(Id);
            if (result != null)
            {
                Anime.Id = result.Id;
                Anime.Title = result.Title;
                Anime.Episodes = result.Episodes;
                Anime.Season = (int)Enum.Parse(typeof(Season), result.Season);
                Anime.PremieredYear = result.PremieredYear;
                Anime.Description = result.Description;
                Anime.ImageUrl = result.ImageUrl;
                Anime.TrailerPosterUrl = result.TrailerPosterUrl;
                Anime.TrailerUrl = result.TrailerUrl;
                Anime.Rating = result.Rating;
                Anime.Status = (int)Enum.Parse(typeof(Status), result.Status);
                Anime.CategoryId = result.CategoryId;
                Anime.GenreIds = result.GenreIds?.ToList() ?? new List<int>();
                Anime.StudioIds = result.StudioIds ?? new HashSet<int>();

                // Ensure the path uses forward slashes for web access
                UploadedImageUrl = result.ImageUrl?.Replace("\\", "/");
            }
        }
        else // Handle case for new anime creation (Id == 0)
        {
            // Reset the Anime object and image URLs for a new entry
            Anime = new AnimeUpdateDto
            {
                GenreIds = new List<int>(),
                StudioIds = new HashSet<int>(),
                // Set status to null, so the MudSelect appears unselected.
                Status = null
            };

            // Reset all file URLs for a new entry
            PreviewImageUrl = null;
            UploadedImageUrl = null;
            PreviewPosterUrl = null;
            // PreviewTrailerUrl = null;
        }

        var categories = LookUpService.GetCategoriesAsync();
        var genres = LookUpService.GetGenresAsync();
        var studios = LookUpService.GetStudiosAsync();

        await Task.WhenAll(categories, genres, studios);

        // Assign results (ensure they are not null)
        Categories = categories.Result?.OrderBy(c => c.Name).ToList() ?? new();
        Genres = genres.Result?.OrderBy(g => g.Name).ToList() ?? new();
        Studios = studios.Result?.OrderBy(s => s.Name).ToList() ?? new();
    }

    private async Task UpsertAnime()
    {
        IsLoading = true;
        StateHasChanged();

        try
        {
            // --- 1. Concurrent File Uploads using the Service Pattern ---
            // Create tasks for all potential file uploads. If a file is null, we return the existing URL.
            // This is cleaner and more performant. The IAnimeService methods handle the API calls.
            var imageUploadTask = SelectedImageFile != null
                ? AnimeService.UploadImageAsync(SelectedImageFile, Anime.ImageUrl)
                : Task.FromResult(Anime.ImageUrl);

            var posterUploadTask = SelectedPosterFile != null
                ? AnimeService.UploadTrailerPosterAsync(SelectedPosterFile, Anime.TrailerPosterUrl)
                : Task.FromResult(Anime.TrailerPosterUrl);

            var trailerUploadTask = SelectedTrailerFile != null
                ? AnimeService.UploadTrailerAsync(SelectedTrailerFile, Anime.TrailerUrl)
                : Task.FromResult(Anime.TrailerUrl);

            // Wait for all three uploads/path resolutions concurrently
            await Task.WhenAll(imageUploadTask, posterUploadTask, trailerUploadTask);

            // 2. Update the DTO with the new (or retained old) paths
            Anime.ImageUrl = imageUploadTask.Result;
            Anime.TrailerPosterUrl = posterUploadTask.Result;
            Anime.TrailerUrl = trailerUploadTask.Result;

            bool success;

            // --- 3. CRUD Operation using the Service Pattern ---
            if (Id == 0)
            {
                // Create logic: Map the AnimeUpdateDto properties to an AnimeCreateDto
                // as the form model is AnimeUpdateDto to handle the update scenario cleanly.
                var createDto = new AnimeCreateDto
                {
                    Title = Anime.Title,
                    Description = Anime.Description,
                    Episodes = Anime.Episodes,
                    Season = Anime.Season,
                    PremieredYear = Anime.PremieredYear,
                    Rating = Anime.Rating,
                    Status = Anime.Status,
                    CategoryId = Anime.CategoryId,
                    GenreIds = Anime.GenreIds.ToList(), // Convert to list for the Create DTO
                    StudioIds = Anime.StudioIds,
                    ImageUrl = Anime.ImageUrl,
                    TrailerUrl = Anime.TrailerUrl,
                    TrailerPosterUrl = Anime.TrailerPosterUrl
                };

                success = await AnimeService.CreateAnimeAsync(createDto);
            }
            else
            {
                // Update logic: Pass the AnimeUpdateDto directly
                success = await AnimeService.UpdateAnimeAsync(Anime);
            }

            if (success)
            {
                Snackbar.Add($"Anime {(Id == 0 ? "created" : "updated")} successfully.", Severity.Success);
                Navigation.NavigateTo("/admin/animes");
            }
            else
            {
                // The service should ideally handle API error messages, but provide a fallback.
                Snackbar.Add("Operation failed.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            // Handle any exceptions during upload or DTO transfer
            Snackbar.Add($"An unexpected error occurred: {ex.Message}", Severity.Error);
        }
        finally
        {
            IsLoading = false;
            StateHasChanged(); // Ensure UI state is updated
        }
    }

    private void ToggleGenre(int genreId, bool isChecked)
    {
        if (isChecked)
        {
            if (!Anime.GenreIds.Contains(genreId))
                Anime.GenreIds.Add(genreId);
        }
        else
        {
            Anime.GenreIds.Remove(genreId);
        }
        StateHasChanged();
    }

    private string ConvertStudioIdToName(int id)
    {
        // Find the studio object corresponding to the ID and return its Name.
        return Studios?.FirstOrDefault(s => s.Id == id)?.Name ?? $"ID {id}";
    }

    private Status? AnimeStatusEnum
    {
        get => Anime.Status.HasValue ? (Status)Anime.Status.Value : null;
        set => Anime.Status = value.HasValue ? (int)value.Value : null;
    }

    // OnFileSelected methods
    private async Task OnImageFileSelected(InputFileChangeEventArgs e)
    {
        if (await ValidateAndPreviewFile(e.File, "image/", url => PreviewImageUrl = url))
            SelectedImageFile = e.File;
        else
            SelectedImageFile = null;
    }

    private async Task OnPosterFileSelected(InputFileChangeEventArgs e)
    {
        if (await ValidateAndPreviewFile(e.File, "image/", url => PreviewPosterUrl = url))
            SelectedPosterFile = e.File;
        else
            SelectedPosterFile = null;
    }

    private async Task OnTrailerFileSelected(InputFileChangeEventArgs e)
    {
        // For video, we don't generate a preview URL (base64 is too heavy).
        // We just validate. The UI will show the file name.
        if (await ValidateAndPreviewFile(e.File, "video/", null))
        {
            SelectedTrailerFile = e.File;
            // Clear existing URL so UI knows we are pending a new upload
            // But KEEP it in Anime.TrailerUrl so we can pass it as 'oldUrl' to the service!
            // The UI check `SelectedTrailerFile != null` handles the display logic.
        }
        else
        {
            SelectedTrailerFile = null;
        }
    }

    // Consolidated Validator & Previewer
    private async Task<bool> ValidateAndPreviewFile(IBrowserFile file, string mimePrefix, Action<string?>? setPreview)
    {
        if (file == null) return false;

        if (!file.ContentType.StartsWith(mimePrefix))
        {
            Snackbar.Add($"Invalid file type. Expected {mimePrefix}", Severity.Warning);
            setPreview?.Invoke(null);
            return false;
        }

        long maxFileSize = mimePrefix == "video/" ? 100 * 1024 * 1024 : 5 * 1024 * 1024;
        if (file.Size > maxFileSize)
        {
            Snackbar.Add($"File too large. Max {maxFileSize / 1024 / 1024}MB", Severity.Warning);
            setPreview?.Invoke(null);
            return false;
        }

        // Only generate preview for images
        if (mimePrefix == "image/" && setPreview != null)
        {
            try
            {
                var buffer = new byte[file.Size];
                await file.OpenReadStream(maxFileSize).ReadAsync(buffer);
                setPreview.Invoke($"data:{file.ContentType};base64,{Convert.ToBase64String(buffer)}");
            }
            catch
            {
                setPreview.Invoke(null);
                return false;
            }
        }

        StateHasChanged();
        return true;
    }
}