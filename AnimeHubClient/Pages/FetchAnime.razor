@page "/fetchanime"
@using AnimeHub.Shared.Models
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Anime List</h3>

@if (animeList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Genre</th>
                <th>Episodes</th>
                <th>Year Published</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var anime in animeList)
            {
                <tr>
                    <td>@anime.Id</td>
                    <td>@anime.Title</td>
                    <td>@anime.Genre</td>
                    <td>@anime.Episodes</td>
                    <td>@anime.YearPublished</td>
                    <td>
                        <a href="@($"update-anime/{anime.Id}")" class="btn btn-primary">Update</a>
                    </td>
                    <td>
                        <button class="btn btn-danger" @onclick="() => DeleteAnime(anime.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Anime>? animeList;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            animeList = await Http.GetFromJsonAsync<List<Anime>>("api/anime");
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error fetching anime data: {ex.Message}");
        }
    }

    private async Task DeleteAnime(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this anime?");

        if (confirmed)
        {
            await Http.DeleteAsync($"api/anime/{id}");

            Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
        }
    }
}
