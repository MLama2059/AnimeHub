@inject HttpClient Http
@inject IJSRuntime JSRuntime

<nav class="navbar navbar-expand-md navbar-dark fixed-top py-3" id="mainNavbar">
    <div class="container">
        <!-- Left Menu (mobile) -->
        <MudMenu Icon="@Icons.Material.Filled.Menu" Color="Color.Primary">
            <MudMenuItem Label="Home" Href="/" />
            <MudMenuItem Label="Catalog" Href="/anime-catalog" />
            <MudMenuItem Label="Anime" Href="/anime" />
            <MudMenu Label="Categories">
                @foreach (var category in Categories)
                {
                    <MudMenuItem Label="@category.Name" />
                }
            </MudMenu>
            <MudMenu Label="Genres">
                @foreach (var genre in Genres)
                {
                    <MudMenuItem Label="@genre.Name" />
                }
            </MudMenu>
        </MudMenu>

        <!-- Brand -->
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="/images/Anime-Hub.svg" loading="lazy" alt="AnimeHub" height="45" class="me-2" />
        </a>

        <!-- Mobile Toggle -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Center Links -->
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mx-auto mb-2 mb-md-0 text-center">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/anime-catalog">Catalog</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/anime">Anime</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/category">Category</NavLink>
                </li>
            </ul>

            <!-- Right Buttons -->
            <div class="d-flex align-items-center gap-2">
                <NavLink href="/register" class="btn btn-outline-warning btn-sm px-3 fw-semibold">Register</NavLink>
                <NavLink href="/login" class="btn btn-warning btn-sm text-dark px-3 fw-semibold">Login</NavLink>
            </div>
        </div>
    </div>
</nav>

@code {
    private List<CategoryReadDto>? Categories;
    private List<GenreReadDto>? Genres;

    protected override async Task OnInitializedAsync()
    {
        Categories = await Http.GetFromJsonAsync<List<CategoryReadDto>>("api/category");
        Genres = await Http.GetFromJsonAsync<List<GenreReadDto>>("api/genre");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("navbarScroll.init");
        }
    }
}
